    "db:create-users": "tsx src/scripts/create-test-users.ts",
    "db:setup": "tsx src/scripts/setup-database.ts",
    "db:reset": "tsx src/scripts/reset.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test:supabase": "tsx src/scripts/test-supabase.ts"
