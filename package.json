{
  "name": "fanclubz",
  "version": "2.0.59",
  "description": "Fan Club Z - Social Predictions Platform",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=@fanclubz/client",
    "dev:server": "npm run dev --workspace=@fanclubz/server",
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=@fanclubz/shared",
    "build:client": "npm run build --workspace=@fanclubz/client",
    "build:server": "npm run build --workspace=@fanclubz/server",
    "install:all": "npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules shared/node_modules",
    "test": "npm run test --workspaces --if-present",
    "test:client": "npm run test --workspace=@fanclubz/client",
    "test:server": "npm run test --workspace=@fanclubz/server",
    "lint": "npm run lint --workspaces --if-present",
    "lint:client": "npm run lint --workspace=@fanclubz/client",
    "lint:server": "npm run lint --workspace=@fanclubz/server",
    "db:setup": "npm run db:setup --workspace=@fanclubz/server",
    "db:migrate": "npm run db:migrate --workspace=@fanclubz/server",
    "db:seed": "npm run db:seed --workspace=@fanclubz/server",
    "test:supabase": "npm run test:supabase --workspace=@fanclubz/server",
    "git:status": "git status",
    "save-work": "git add . && git commit -m \"feat: work in progress - $(date '+%Y-%m-%d %H:%M:%S')\"",
    "push-changes": "git push origin main",
    "sync": "git pull origin main && git push origin main",
    "deploy:dev": "./deploy-dev.sh",
    "deploy:staging": "./deploy-staging.sh",
    "deploy:production": "./deploy-production.sh",
    "version:bump": "node scripts/version-bump.js",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "version:verify": "node scripts/verify-versions.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vite": "^4.4.9",
    "@vitejs/plugin-react": "^4.1.1",
    "typescript": "^5.3.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itisteddy/fan-club-z.git"
  },
  "keywords": [
    "predictions",
    "social-platform",
    "fan-club",
    "react",
    "typescript",
    "nodejs",
    "supabase"
  ],
  "author": "Fan Club Z Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "socket.io-client": "^4.8.1"
  }
}
