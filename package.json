{
  "name": "fanclubz-v2",
  "version": "2.1.0",
  "description": "Social predictions platform where users create and participate in their own prediction scenarios",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:shared": "cd shared && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../shared && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules shared/node_modules",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm run test",
    "test:server": "cd server && npm run test",
    "verify:supabase": "node verify-supabase.js",
    "git:setup": "node scripts/initial-commit-setup.js",
    "git:status": "node scripts/git-status.js",
    "save-work": "node scripts/quick-commit.js",
    "push-changes": "node scripts/push-to-github.js",
    "quick-status": "git status && git branch",
    "sync": "git pull origin main",
    "github-setup": "npm run git:setup && echo '\nðŸŽ¯ Ready for GitHub! Create repo and add remote.'",
    "check-build": "node check-build.js",
    "restart-dev": "bash restart-dev.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "predictions",
    "social",
    "betting",
    "blockchain",
    "community",
    "web3"
  ],
  "author": "Fan Club Z Team",
  "license": "MIT"
}
