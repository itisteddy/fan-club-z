{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "es2020",
    "target": "es2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ]
} 